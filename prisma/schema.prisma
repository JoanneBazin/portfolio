generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id  String  @id @default(cuid())
  email String  @unique
  name  String?
  password  String
  role  Role  @default(ADMIN)
  about String?
  skills  Skill[]
  projects Project[]

  @@map("users")
}

enum Role {
  ADMIN
}

model Skill {
  id  String  @id @default(cuid())
  name  String
  logo  String
  category  String?
  order Int
  userId  String
  user  User  @relation(fields: [userId], references: [id])
  projects  Project[]

  @@map("skills")
}

model Project {
  id  String  @id @default(cuid())
  title String
  description String
  images ProjectImage[]
  skills  Skill[]
  objectives  String[]
  githubUrl String?
  liveUrl String?
  size String
  order Int
  createdAt  DateTime @default(now())
  userId  String
  user  User  @relation(fields: [userId], references: [id])

  @@map("projects")
}

model ProjectImage {
  id  String  @id @default(cuid())
  url String
  alt String
  order Int
  projectId  String
  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("projects_images")
}